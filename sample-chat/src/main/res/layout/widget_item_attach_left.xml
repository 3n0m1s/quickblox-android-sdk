        tools:text="Opponent Name" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/msg_text_time_attach"
        style="@style/TextViewAttach.Right"
        tools:text="time" />

</LinearLayout>